[MESSAGES CONTROL]
# For all codes, run 'pylint --list-msgs' or go to 'http://pylint-messages.wikidot.com/all-codes'
# W0511 fixme
# C0111 Missing docstring
# C0103 Invalid %s name "%s"
# I0011 Warning locally suppressed using disable-msg
# R0913 Too many arguments
# R0903 too-few-public-methods
disable=W0511,C0111,C0103,I0011,R0913,R0903

# TODO disable this feature as some pylint suppressions only apply to Python 2 or 3 and we run pylint on both Python 2 and 3
enable=useless-suppression

[FORMAT]
max-line-length=120

[DESIGN]
# Maximum number of locals for function / method body
max-locals=25
# Maximum number of branch for function / method body
max-branches=20

[SIMILARITIES]
min-similarity-lines=10

